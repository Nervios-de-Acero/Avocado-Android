<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".IniciarSesionActivity">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="212dp"
        android:layout_height="57dp"
        app:srcCompat="@drawable/logo_nombre"
        tools:layout_editor_absoluteX="99dp"
        tools:layout_editor_absoluteY="88dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="332dp"
        android:layout_height="52dp"
        android:fontFamily="@font/roboto"
        android:text="¡Bienvenido de vuelta! Por favor, inicia sesión para acceder a tu cuenta"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="15sp"
        tools:layout_editor_absoluteX="39dp"
        tools:layout_editor_absoluteY="180dp" />

    <EditText
        android:id="@+id/input_contrasena"
        android:layout_width="237dp"
        android:layout_height="34dp"
        android:backgroundTint="#D9D9D9"
        android:ems="10"
        android:fontFamily="@font/roboto"
        android:text="Contraseña"
        android:textAlignment="center"
        tools:layout_editor_absoluteX="87dp"
        tools:layout_editor_absoluteY="460dp" />

    <EditText
        android:id="@+id/input_email"
        android:layout_width="237dp"
        android:layout_height="34dp"
        android:backgroundTint="#D9D9D9"
        android:ems="10"
        android:fontFamily="@font/roboto"
        android:inputType="textEmailAddress"
        android:text="Correo Electrónico"
        android:textAlignment="center"
        tools:layout_editor_absoluteX="87dp"
        tools:layout_editor_absoluteY="370dp" />

    <Button
        android:id="@+id/btn_iniciarsesion"
        android:layout_width="202dp"
        android:layout_height="64dp"
        android:backgroundTint="#B8E092"
        android:fontFamily="@font/roboto"
        android:text="Iniciar Sesión"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="20sp"
        app:cornerRadius="20dp"
        tools:layout_editor_absoluteX="104dp"
        tools:layout_editor_absoluteY="558dp" />

    <Button
        android:id="@+id/btn_registrarse"
        android:layout_width="236dp"
        android:layout_height="64dp"
        android:backgroundTint="#00FFFFFF"
        android:fontFamily="@font/roboto"
        android:text="No tienes cuenta?  Registrate"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="14sp"
        tools:layout_editor_absoluteX="87dp"
        tools:layout_editor_absoluteY="634dp" />
</androidx.constraintlayout.widget.ConstraintLayout>