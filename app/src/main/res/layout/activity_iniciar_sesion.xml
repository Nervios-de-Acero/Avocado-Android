<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".IniciarSesionActivity">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="212dp"
        android:layout_height="57dp"
        android:layout_marginStart="99dp"
        android:layout_marginTop="88dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo_nombre" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="332dp"
        android:layout_height="52dp"
        android:layout_marginStart="39dp"
        android:layout_marginTop="180dp"
        android:fontFamily="@font/roboto"
        android:text="¡Bienvenido de vuelta! Por favor, inicia sesión para acceder a tu cuenta"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/input_contrasena"
        android:layout_width="237dp"
        android:layout_height="50dp"
        android:layout_marginStart="87dp"
        android:layout_marginTop="460dp"
        android:backgroundTint="#D9D9D9"
        android:ems="10"
        android:fontFamily="@font/roboto"
        android:text="Contraseña"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/input_email"
        android:layout_width="237dp"
        android:layout_height="50dp"
        android:layout_marginStart="87dp"
        android:layout_marginTop="370dp"
        android:backgroundTint="#D9D9D9"
        android:ems="10"
        android:fontFamily="@font/roboto"
        android:inputType="textEmailAddress"
        android:text="Correo Electrónico"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_iniciarsesion"
        android:layout_width="202dp"
        android:layout_height="64dp"
        android:layout_marginStart="104dp"
        android:layout_marginBottom="109dp"
        android:backgroundTint="#B8E092"
        android:fontFamily="@font/roboto"
        android:text="Iniciar Sesión"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="20sp"
        app:cornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_registrarse"
        android:layout_width="236dp"
        android:layout_height="64dp"
        android:layout_marginStart="87dp"
        android:layout_marginBottom="33dp"
        android:backgroundTint="#00FFFFFF"
        android:fontFamily="@font/roboto"
        android:text="No tienes cuenta?  Registrate"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>