<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#B8E092"
    app:cornerRadius="10dp">

    <LinearLayout
        android:layout_width="338dp"
        android:layout_height="258dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageButton
            android:id="@+id/btnCerrarDialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_margin="10dp"
            android:backgroundTint="#00FFFFFF"
            app:srcCompat="@drawable/x_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:fontFamily="@font/roboto"
            android:padding="8dp"
            android:text="Título de la Receta"
            android:textColor="#3C5B27"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editTextNuevoTitulo"
            android:layout_width="319dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:fontFamily="@font/roboto"
            android:hint="Nuevo Título"
            android:inputType="text"
            android:padding="8dp"
            android:textColor="#000" />

        <Button
            android:id="@+id/btnModificarNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:backgroundTint="#FDFFEB"
            android:fontFamily="@font/roboto"
            android:padding="8dp"
            android:text="Modificar Nombre"
            android:textAllCaps="false"
            android:textColor="#000"
            app:cornerRadius="100dp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>