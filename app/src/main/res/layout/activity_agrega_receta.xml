<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AgregaRecetaActivity">

    <Button
        android:id="@+id/btn_categorias"
        android:layout_width="160dp"
        android:layout_height="48dp"
        android:backgroundTint="#B8E092"
        android:fontFamily="@font/roboto"
        android:text="Agregar Categorías"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="10sp"
        app:cornerRadius="100dp"
        app:icon="@drawable/mas_icono"
        app:iconPadding="2dp"
        app:iconSize="14dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="125dp"
        tools:layout_editor_absoluteY="646dp" />

    <TextView
        android:id="@+id/title_categorias"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto"
        android:text="Categorías"
        android:textColor="#3C5B27"
        android:textSize="16sp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="19dp"
        tools:layout_editor_absoluteY="612dp" />

    <Button
        android:id="@+id/btn_pasos"
        android:layout_width="160dp"
        android:layout_height="48dp"
        android:backgroundTint="#B8E092"
        android:fontFamily="@font/roboto"
        android:text="Agregar Pasos"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="10sp"
        app:cornerRadius="100dp"
        app:icon="@drawable/mas_icono"
        app:iconPadding="2dp"
        app:iconSize="14dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="125dp"
        tools:layout_editor_absoluteY="526dp" />

    <TextView
        android:id="@+id/title_pasos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto"
        android:text="Pasos de preparación"
        android:textColor="#3C5B27"
        android:textSize="16sp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="19dp"
        tools:layout_editor_absoluteY="479dp" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:background="#B8E092"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp" />

    <TextView
        android:id="@+id/text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_bold"
        android:text="Titulo de la Receta"
        android:textColor="#3C5B27"
        android:textSize="20sp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="199dp" />

    <ImageButton
        android:id="@+id/btn_editTitle"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:layout_marginBottom="507dp"
        android:backgroundTint="#00FFFFFF"
        android:contentDescription="Botón de editar el titulo"
        android:tint="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:srcCompat="@drawable/pen_icon"
        tools:ignore="MissingConstraints,UseAppTint,TouchTargetSizeCheck"
        tools:layout_editor_absoluteX="372dp" />

    <ImageButton
        android:id="@+id/btn_editDescripcion"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:layout_marginBottom="424dp"
        android:backgroundTint="#00FFFFFF"
        and
        android:contentDescription="Botón de editar descripción, tiempo y nivel"
        android:tint="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:srcCompat="@drawable/pen_icon"
        tools:ignore="MissingConstraints,UseAppTint,TouchTargetSizeCheck"
        tools:layout_editor_absoluteX="372dp" />

    <ImageView
        android:id="@+id/img_clock"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:tint="#B8E092"
        app:srcCompat="@drawable/clock_icon"
        tools:ignore="MissingConstraints,UseAppTint"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="258dp" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:tint="#B8E092"
        app:srcCompat="@drawable/batidor_icon"
        tools:ignore="MissingConstraints,UseAppTint"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="280dp" />

    <TextView
        android:id="@+id/text_descripcion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto"
        android:text="Descripción de la Receta"
        android:textColor="#000000"
        android:textSize="12sp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="235dp" />

    <TextView
        android:id="@+id/text_tiempoCoccion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto"
        android:text="Tiempo de cocción"
        android:textColor="#000000"
        android:textSize="10sp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="47dp"
        tools:layout_editor_absoluteY="262dp" />

    <TextView
        android:id="@+id/text_dificultad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto"
        android:text="Nivel de dificultad"
        android:textColor="#000000"
        android:textSize="10sp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="47dp"
        tools:layout_editor_absoluteY="284dp" />

    <Button
        android:id="@+id/btn_ingrediente"
        android:layout_width="160dp"
        android:layout_height="48dp"
        android:backgroundTint="#B8E092"
        android:fontFamily="@font/roboto"
        android:text="Agregar Ingredientes"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="10sp"
        app:cornerRadius="100dp"
        app:icon="@drawable/mas_icono"
        app:iconPadding="2dp"
        app:iconSize="14dp"
        tools:ignore="MissingConstraints,TouchTargetSizeCheck"
        tools:layout_editor_absoluteX="125dp"
        tools:layout_editor_absoluteY="387dp" />

    <TextView
        android:id="@+id/title_ingredientes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto"
        android:text="Ingredientes"
        android:textColor="#3C5B27"
        android:textSize="16sp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="19dp"
        tools:layout_editor_absoluteY="344dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="251dp"
        tools:layout_editor_absoluteY="2dp">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="57dp"
            android:layout_height="55dp"
            android:backgroundTint="#00FFFFFF"
            android:tint="@color/white"
            app:srcCompat="?attr/actionModeCloseDrawable"
            tools:ignore="MissingConstraints,UseAppTint,SpeakableTextPresentCheck" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="115dp"
            android:layout_height="31dp"
            android:layout_marginTop="25px"
            android:layout_marginRight="350px"
            app:srcCompat="@drawable/logo_nombre"
            tools:ignore="MissingConstraints" />

        <ImageButton
            android:id="@+id/btn_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#00FFFFFF"
            android:layout_marginTop="10px"
            android:contentDescription="Botón de cerrar la edicion"
            app:srcCompat="@drawable/x_icon"
            tools:ignore="MissingConstraints,TouchTargetSizeCheck" />

        <ImageButton
            android:id="@+id/btn_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#00FFFFFF"
            android:layout_marginTop="10px"
            android:contentDescription="Botón de confirmar edicion"
            app:srcCompat="@drawable/check_icon"
            tools:ignore="MissingConstraints,TouchTargetSizeCheck" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="58dp">

        <ImageView
            android:id="@+id/img_comida"
            android:layout_width="match_parent"
            android:layout_height="124dp"
            app:srcCompat="@drawable/pancakes_comida" />

        <ImageButton
            android:id="@+id/btn_camera"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:backgroundTint="#00FFFFFF"
            android:contentDescription="Botón para subir imagenes"
            android:tint="#000000"
            app:srcCompat="@android:drawable/ic_menu_camera"
            tools:ignore="MissingConstraints,UseAppTint,TouchTargetSizeCheck" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>