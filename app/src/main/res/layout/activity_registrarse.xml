<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistrarseActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:context=".IniciarSesionActivity"
        tools:layout_editor_absoluteY="184dp">
        <?xml version="1.0" encoding="utf-8"?>
        <LinearLayout
            android:layout_width="440dp"
            android:layout_height="867dp"
            android:orientation="vertical"
            tools:layout_editor_absoluteY="0dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="332dp"
            android:layout_height="52dp"
            android:layout_marginStart="39dp"
            android:layout_marginBottom="42dp"
            android:fontFamily="@font/roboto"
            android:text="Al registrarte aceptas nuestras Condiciones y la Política de privacidad"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:gravity="center_horizontal|center_vertical"/>

        <EditText
            android:id="@+id/input_email2"
            android:layout_width="235dp"
            android:layout_height="50dp"
            android:layout_marginStart="88dp"
            android:layout_marginTop="244dp"
            android:backgroundTint="#D9D9D9"
            android:ems="10"
            android:fontFamily="@font/roboto"
            android:inputType="textEmailAddress"
            android:text="Nombre completo"
            android:textAlignment="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:gravity="center_horizontal|center_vertical"/>

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="212dp"
            android:layout_height="57dp"
            android:layout_marginStart="92dp"
            android:layout_marginTop="68dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/logo_nombre"
            android:gravity="center_horizontal|center_vertical"/>

        <TextView
            android:id="@+id/textView"
            android:layout_width="332dp"
            android:layout_height="52dp"
            android:layout_marginStart="36dp"
            android:layout_marginTop="148dp"
            android:fontFamily="@font/roboto"
            android:text="¡Regístrate ahora para unirte a esta creciente comunidad culinaria y disfrutar de miles de recetas!"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:gravity="center_horizontal|center_vertical"/>

        <EditText
            android:id="@+id/input_contrasena"
            android:layout_width="235dp"
            android:layout_height="50dp"
            android:layout_marginStart="88dp"
            android:layout_marginTop="412dp"
            android:backgroundTint="#D9D9D9"
            android:ems="10"
            android:fontFamily="@font/roboto"
            android:text="Contraseña"
            android:textAlignment="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:gravity="center_horizontal|center_vertical"/>

        <EditText
            android:id="@+id/input_email"
            android:layout_width="235dp"
            android:layout_height="50dp"
            android:layout_marginStart="88dp"
            android:layout_marginTop="328dp"
            android:backgroundTint="#D9D9D9"
            android:ems="10"
            android:fontFamily="@font/roboto"
            android:inputType="textEmailAddress"
            android:text="Correo Electrónico"
            android:textAlignment="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:gravity="center_horizontal|center_vertical"/>

        <Button
            android:id="@+id/btn_iniciarsesion"
            android:layout_width="202dp"
            android:layout_height="64dp"
            android:layout_marginStart="100dp"
            android:layout_marginTop="500dp"
            android:backgroundTint="#B8E092"
            android:fontFamily="@font/roboto"
            android:text="Registrate"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textSize="20sp"
            app:cornerRadius="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:gravity="center_horizontal|center_vertical"/>

        <ImageButton
            android:id="@+id/btn_backInicio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#00FFFFFF"
            app:srcCompat="?attr/actionModeCloseDrawable"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="16dp"
            android:gravity="center_horizontal|center_vertical"/>

        <LinearLayout
            android:layout_width="451dp"
            android:layout_height="794dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="-2dp"></LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>

