<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistrarseActivity">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="332dp"
            android:layout_height="52dp"
            android:layout_marginStart="39dp"
            android:layout_marginBottom="42dp"
            android:fontFamily="@font/roboto"
            android:gravity="center_horizontal|center_vertical"
            android:text="Al registrarte aceptas nuestras Condiciones y la Política de privacidad"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/etUser"
            android:layout_width="235dp"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:backgroundTint="#D9D9D9"
            android:ems="10"
            android:fontFamily="@font/roboto"
            android:gravity="center_horizontal|center_vertical"
            android:hint="Usuario"
            android:inputType="text"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etEmail" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="212dp"
            android:layout_height="57dp"
            android:layout_marginTop="68dp"
            android:gravity="center_horizontal|center_vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/logo_nombre" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="332dp"
            android:layout_height="52dp"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/roboto"
            android:gravity="center_horizontal|center_vertical"
            android:text="¡Regístrate ahora para unirte a esta creciente comunidad culinaria y disfrutar de miles de recetas!"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.493"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView3" />

        <EditText
            android:id="@+id/etPassword"
            android:layout_width="235dp"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:backgroundTint="#D9D9D9"
            android:ems="10"
            android:fontFamily="@font/roboto"
            android:gravity="center_horizontal|center_vertical"
            android:hint="Contraseña"
            android:inputType="text|textPassword"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etUser" />

        <EditText
            android:id="@+id/etEmail"
            android:layout_width="235dp"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:backgroundTint="#D9D9D9"
            android:ems="10"
            android:fontFamily="@font/roboto"
            android:gravity="center_horizontal|center_vertical"
            android:hint="Correo Electrónico"
            android:inputType="textEmailAddress"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etNombre" />

        <EditText
            android:id="@+id/etNombre"
            android:layout_width="235dp"
            android:layout_height="50dp"
            android:layout_marginTop="32dp"
            android:backgroundTint="#D9D9D9"
            android:ems="10"
            android:fontFamily="@font/roboto"
            android:gravity="center_horizontal|center_vertical"
            android:hint="Nombre completo"
            android:inputType="text"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <ImageButton
            android:id="@+id/btn_backInicio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:backgroundTint="#02FFFFFF"
            android:contentDescription="Botón de volver al home"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="?attr/actionModeCloseDrawable"

            tools:ignore="TouchTargetSizeCheck" />

        <Button
            android:id="@+id/btn_registrarse"
            android:layout_width="202dp"
            android:layout_height="64dp"
            android:layout_marginTop="32dp"
            android:backgroundTint="#B8E092"
            android:fontFamily="@font/roboto"
            android:gravity="center_horizontal|center_vertical"
            android:text="Registrate"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textSize="20sp"
            app:cornerRadius="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etPassword" />

</androidx.constraintlayout.widget.ConstraintLayout>
